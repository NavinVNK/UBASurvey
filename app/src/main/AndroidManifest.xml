<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ubasurvey.nawin.com.ubasurvey">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ChoiceApplication"
        android:allowBackup="true"
        android:icon="@drawable/ubalogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ubalogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectRecordActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".ChangePswActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".BasicinfoActivity" />
        <activity android:name=".HouseholdActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        android:label="@string/title_activity_select_record"
        android:theme="@style/AppTheme" />
        <activity android:name=".MigrationStatusActivity" />
        <activity android:name=".RespondentProfileActivity" />
        <activity android:name=".WaterSourceActivity" />
        <activity android:name=".FormsMenuActivity" />
        <activity android:name=".AgriculturalInputsActivity" />
        <activity android:name=".FamilyDetailsActivity" />
        <activity android:name=".FamilyInfoActivity" />
        <activity android:name=".LiveStockActivity" />
        <activity android:name=".ProblemsVillageActivity" />
        <activity android:name=".LandInfoActivity" />
        <activity android:name=".GovtSchemesActivity" />
        <activity android:name=".SourceEnergyActivity" />
        <activity android:name=".ElectappDetailsActivity" />
        <activity android:name=".AgriProduceActivity" />
        <activity android:name=".GeneralInfoActivity"></activity>
    </application>

</manifest>